#include <stdio.h>
void main()
{
    int a,b,sum,diff,prod ;
    printf("Enter a number X: ");
    scanf("%d", &a);
    printf("Enter a number Y: ");
    scanf("%d", &b);
    sum=a+b;
    diff=a-b;
    prod=a*b;
    printf("The sum of X and Y is %d. \n The subtraction is %d. \n And the product is %d. ", sum,diff,prod);
}
